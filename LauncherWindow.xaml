<Window x:Class="CarRentalSystem.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRentalSystem"
        mc:Ignorable="d"
        Title="Car Rental System" Height="200" Width="336.472" ResizeMode="NoResize" Background="LightGoldenrodYellow">
    <Grid>
        <Button x:Name="LaunchVehiclesBtn" Click="LaunchVehiclesBtn_Click" Content="View Vehicles" Height="55" FontSize="14" HorizontalAlignment="Left" Margin="186,30,0,0" VerticalAlignment="Top" Width="110" Background="Beige"/>
        <Button x:Name="LoadDatabaseBtn" Click="LoadDatabaseBtn_Click" Content="Connect to Database" Height="55" FontSize="14" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top" Width="146" Background="LightBlue"/>
        <Button x:Name="SaveDatabaseBtn" Click="SaveDatabaseBtn_Click" Content="Update Database" Height="40" FontSize="14" HorizontalAlignment="Left" Margin="147,100,0,0" VerticalAlignment="Top" Width="149" Background="LightGreen"/>
        <Button x:Name="AdminLoginBtn" Click="AdminLoginBtn_Click" Content="Admin Tools" Height="40" FontSize="14" HorizontalAlignment="Left" Margin="30,100,0,0" VerticalAlignment="Top" Width="107" Background="WhiteSmoke"/>
    </Grid>
</Window>
